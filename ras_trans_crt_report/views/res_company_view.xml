<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_company_form_crt" model="ir.ui.view">
            <field name="name">res.company.crt</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="mic_crt_logos" string="MIC-CRT">
                        <group name="logos">
                            <field name="logo_crt" widget="image" class="oe_avatar"/>
                            <field name="mic_logo" widget="image" class="oe_avatar"/>
                            <field name="sello_empresa" widget="image" class="oe_avatar"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>

</odoo>